<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hear&Read</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            padding-top: 70px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 50px;
            border-top: 1px solid #ddd;

        }

        .custom-card {
            border-radius: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .custom-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

            .custom-card .card-title {
                font-size: 1.2rem;
                font-weight: 600;
            }

            .custom-card .card-text {
                font-size: 0.9rem;
                color: #555;
            }

        .price {
            font-size: 1rem;
            font-weight: bold;
            padding: 6px 12px;
        }

    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/image/Logo-Hear&Read.jpg" alt="Hear&Read Logo" class="img-fluid" style="height: 75px; border-style:solid ;border-width:10px;border-color:white; border-radius:50% " />
                <span class="ms-2 fw-bold">Hear&Read</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <nav>
                    <div class="logo"><a href="index.html">Al-Maarefa</a></div>
                    <ul class="nav-links">
                        <li><a href="index.html" class="active">Home</a></li>
                        <li><a href="book.html">Books</a></li>
                        <li class="auth-mobile"><a href="category.html">Categories</a></li>
                        <li><a href="subscribe.html">Subscribe</a></li>
                    </ul>
                    <div class="auth-links">
                        <a href="login.html" class="login">Log In</a>
                        <a href="signup.html" class="signup">Sign Up</a>
                    </div>
                    <div class="hamburger">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <div class="line3"></div>
                    </div>
                </nav>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">© @DateTime.Now.Year - Hear&Read. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
