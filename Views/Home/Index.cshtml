@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Storytel Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Hear_&_Read</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Audiobooks</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">E-books</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="Login.cshtml">Login</a></li>
                    <li class="nav-item"><a class="btn btn-light text-primary ms-2" href="#">Subscribe</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="hero">
        <div class="container text-center">
            <h1 class="display-4">Listen to the Best Audiobooks</h1>
            <p class="lead">Over 200,000 titles available. Enjoy anytime, anywhere.</p>
            <a href="#" class="btn btn-light btn-lg">Start Free Trial</a>
        </div>
    </section>

    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="feature-icon">🎧</div>
                    <h5>200,000+ Titles</h5>
                    <p>Explore a vast library of audiobooks and e-books.</p>
                </div>
                <div class="col-md-3">
                    <div class="feature-icon">👶</div>
                    <h5>Kids Mode</h5>
                    <p>Safe and fun content for children.</p>
                </div>
                <div class="col-md-3">
                    <div class="feature-icon">📥</div>
                    <h5>Offline Access</h5>
                    <p>Download books to enjoy without internet.</p>
                </div>
                <div class="col-md-3">
                    <div class="feature-icon">🔄</div>
                    <h5>Cancel Anytime</h5>
                    <p>Flexible subscription plans to suit your needs.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white py-5">
        <div class="container">
            <h2 class="text-center mb-4">Choose Your Plan</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Monthly</h5>
                            <p class="card-text">EGP 89 / month</p>
                            <a href="#" class="btn btn-outline-primary">Try Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">6 Months</h5>
                            <p class="card-text">EGP 474 / 6 months</p>
                            <a href="#" class="btn btn-outline-primary">Try Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Yearly</h5>
                            <p class="card-text">EGP 708 / year</p>
                            <a href="#" class="btn btn-outline-primary">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Book Library</h2>
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <img src="/images/sample-book.jpg" class="card-img-top" alt="Book Title">
                        <div class="card-body">
                            <h5 class="card-title">Book Title</h5>
                            <p class="card-text">Author Name</p>
                            <a href="#" class="btn btn-outline-primary">Listen Now</a>
                        </div>
                    </div>
                </div>
                <!-- More books can go here -->
            </div>
        </div>
    </section>

    <footer class="bg-primary text-white py-4">
        <div class="container text-center">
            <p>&copy; 2025 Hear&Read. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
