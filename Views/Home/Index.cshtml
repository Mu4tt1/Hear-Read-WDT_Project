@model IEnumerable<Hear_Read_WDT_Project.Models.Book>
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/custom.css" />

<!-- Hero Section -->
<section class="hero-banner">
    <div class="hero-content text-center text-white">
        <h1>Welcome to Hear&Read</h1>
        <p>Your place for immersive audiobooks and engaging stories.</p>
        <a href="/Users/Register" class="btn btn-warning">Start Listening</a>
    </div>
</section>

@{
    var images = new[] { "photo1.jpeg", "photo2.jpeg", "photo3.jpeg", "photo4.jpeg", "photo5.jpeg", "photo6.jpeg" };
    var i = 0;
    var bookGroups = Model.Select((book, index) => new { book, index })
                          .GroupBy(x => x.index / 3)
                          .ToList();

}
<section class="container section-spacing">
    <h2 class="section-title text-center mb-5">Featured Books</h2>

    <div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            @for (int g = 0; g < bookGroups.Count; g++)
            {
                var isActive = g == 0 ? "active" : "";
                <div class="carousel-item @isActive">
                    <div class="row justify-content-center">
                        @foreach (var item in bookGroups[g])
                        {
                            var image = images[i % images.Length];
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <img src="~/images/@image" class="card-img-top" alt="@item.book.Title">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">@item.book.Title</h5>
                                        <p class="card-text text-muted">@item.book.Author</p>
                                    </div>
                                </div>
                            </div>
                            i++;
                        }
                    </div>
                </div>
            }

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<!-- Categories -->
<section class="categories-section section-spacing">
    <div class="container text-center">
        <h2 class="section-title">Browse Categories</h2>
        <div class="row justify-content-center mt-4">
            @{
                var categories = new[] { "Drama", "Romance", "Sci-Fi", "Kids", "Mystery", "History" };
                foreach (var cat in categories)
                {
                    <div class="col-md-2 col-4 mb-2">
                        <button class="category-btn">@cat</button>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta-section text-center">
    <h3>Start Your Free Trial Today</h3>
    <p>Unlimited access to audiobooks and ebooks anytime, anywhere.</p>
    <a href="/Users/Register" class="btn btn-success px-4 py-2">Join Now</a>
</section>
